# 資料庫配置
DATABASE_URL=sqlite://lifeup.db

# 伺服器配置
SERVER_HOST=127.0.0.1
SERVER_PORT=8080

# 應用程式配置
ENVIRONMENT=development
RUST_LOG=info

# AI 服務配置
# 選擇 AI 提供商: "OpenAI" 或 "OpenRouter"
API_OPTION=OpenRouter

# OpenAI 配置 (當 API_OPTION=OpenAI 時需要)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# OpenRouter 配置 (當 API_OPTION=OpenRouter 時需要)
OPENROUTER_API_KEY=
OPENROUTER_MODEL=google/gemma-3-4b-it

# AI 模型等級配置 (Fast/Normal/Think)
# Fast - 快速回應，適合簡單對話、快速回覆、任務預覽
AI_MODEL_FAST=google/gemma-3-4b-it

# Normal - 標準推理，適合一般任務生成、成就生成、專家匹配
AI_MODEL_NORMAL=google/gemma-3n-e4b-it

# Think - 深度推理，適合複雜規劃、專家分析(方向/目標/資源)、子任務生成
AI_MODEL_THINK=openai/gpt-oss-120b
