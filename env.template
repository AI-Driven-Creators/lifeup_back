# 資料庫配置
DATABASE_URL=sqlite://lifeup.db

# 伺服器配置
SERVER_HOST=127.0.0.1
SERVER_PORT=8080

# 應用程式配置
ENVIRONMENT=development
RUST_LOG=info

# AI 服務配置
# 選擇 AI 提供商: "OpenAI" 或 "OpenRouter"
API_OPTION=OpenRouter

# OpenAI 配置 (當 API_OPTION=OpenAI 時需要)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# OpenRouter 配置 (當 API_OPTION=OpenRouter 時需要)
OPENROUTER_API_KEY=
OPENROUTER_MODEL=openrouter.ai/google/gemma-3n-e4b-it
